# ==========================================
# Pager Backend Environment Configuration
# ==========================================

# Application Environment
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pager_user
DB_PASSWORD=your_secure_password_here
DB_NAME=pager_dev

# Database SSL (Production)
DB_SSL_REJECT_UNAUTHORIZED=true
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# Database Connection Pool
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Password Security
BCRYPT_SALT_ROUNDS=12

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200

# Logging Configuration
LOG_LEVEL=debug
DB_LOGGING=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=pager:

# Development Settings
DB_SYNCHRONIZE=true

# Push Notifications (Optional for development)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-team-id
APNS_PRIVATE_KEY=your-apns-private-key

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# ==========================================
# SECURITY NOTES:
# ==========================================
# - JWT_SECRET and JWT_REFRESH_SECRET must be at least 32 characters
# - Use different secrets for development and production
# - Never commit actual secrets to version control
# - Use AWS Secrets Manager or similar in production
# - Rotate secrets regularly (recommended: every 30 days)
#
# Database passwords should be strong and rotated regularly
# SSL certificates should be valid and up-to-date in production
# ==========================================