# Railway Deployment Configuration

# Environment variables for production
NODE_ENV=production
PORT=3000
API_PREFIX=api

# Database Configuration (Railway PostgreSQL)
DB_HOST=${{RAILWAY_STATIC_URL}}
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=${{PGPASSWORD}}
DB_NAME=railway

# Database SSL (Required for Railway)
DB_SSL_REJECT_UNAUTHORIZED=false
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# Database Connection Pool
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=1

# JWT Configuration (Use Railway environment variables for secrets)
JWT_SECRET=${{JWT_SECRET}}
JWT_REFRESH_SECRET=${{JWT_REFRESH_SECRET}}
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Password Security
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://your-mobile-app.com

# Logging Configuration
LOG_LEVEL=info
DB_LOGGING=false

# Redis Configuration (Railway Redis)
REDIS_HOST=${{REDIS_URL}}
REDIS_PORT=6379
REDIS_PASSWORD=${{REDIS_PASSWORD}}
REDIS_DB=0
REDIS_KEY_PREFIX=pager:

# Production Settings
DB_SYNCHRONIZE=false

# Supabase Configuration (Production)
SUPABASE_URL=${{SUPABASE_URL}}
SUPABASE_ANON_KEY=${{SUPABASE_ANON_KEY}}
SUPABASE_SERVICE_ROLE_KEY=${{SUPABASE_SERVICE_ROLE_KEY}}

# Push Notifications (Production)
FCM_SERVER_KEY=${{FCM_SERVER_KEY}}
APNS_KEY_ID=${{APNS_KEY_ID}}
APNS_TEAM_ID=${{APNS_TEAM_ID}}
APNS_PRIVATE_KEY=${{APNS_PRIVATE_KEY}}

# Monitoring (Production)
SENTRY_DSN=${{SENTRY_DSN}}
DATADOG_API_KEY=${{DATADOG_API_KEY}}